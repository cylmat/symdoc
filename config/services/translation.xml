<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <!-- DataCollectorTranslator -->
        <service id="custom.translator" 
            class="App\Application\Translator\CustomDataTranslator"
        >
            <argument type="service" id="translator.data_collector" /><!-- specific -->
        </service>

                <!-- or -->

        <!-- custom.translator2.inner alias for "translator.default" -->
        <service id="custom.translator2" 
            class="App\Application\Translator\CustomDataTranslator"
            decorates="translator"
        >
            <argument type="service" id="custom.translator2.inner" /><!-- implicit -->
        </service>

        <!-- LOADER -->
        <service id="App\Domain\LocalLoader\ArfTaggedLoader">
            <tag name="translation.loader" alias="arf"/>
        </service>

        <service id="App\Domain\LocalLoader\ArfExtractor">
            <tag name="translation.extractor" alias="arf.extract"/>
        </service>

    </services>
</container>

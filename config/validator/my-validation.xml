<?xml version="1.0" encoding="UTF-8" ?>
<!-- config/validator/validation.xml -->

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        https://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="App\Domain\Entity\ValidationEntity">
        <property name="three">
            <constraint name="NotBlank"/>
        </property>

        <getter property="express">
            <constraint name="Expression">
                <option name="expression">
                    this.getExpress() in ['isok'] or !true
                </option>
                <option name="message">Expression fail from xml</option>
                <option name="groups">
                    <value>Valy</value>
                </option>
            </constraint>
        </getter>

        <!-- Can't use "Default" group -->
        <!--group-sequence>
            <value>ValidationEntity</value> 
        </group-sequence-->
    </class>
</constraint-mapping>

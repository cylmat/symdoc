{% extends 'base.html.twig' %}

{% block body %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .doc_menu { position: fixed; bottom: 2em }
        li { list-style-type: none; display: inline }
        a { text-decoration: none }
        .doc_menu .validated { color: green }
    </style>

    <div class="example-wrapper">

        <div class="menu">
            {{ knp_menu_render('main') }}
        </div>

        {% if controller_name is defined %}
            <h2>Welcome to {{ controller_name }}</h2>
        {% endif %}

        {% block wrapper '' %}

        <div class="doc_menu">
            {% set menu_doc = knp_menu_get('doc', [], {include_homepage: false}) %}
            {{ knp_menu_render(menu_doc) }}
        </div>

    </div>

{% endblock %}

{% block test '' %}
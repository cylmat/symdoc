{% extends 'all/index.html.twig' %}

{% block wrapper %}

    {#{ parent() }#}
    {% if data is defined %}
        {{ dump(data) }}
    {% endif %}

    {% if myvar is defined %}
        <p>
            1.{{ myvar|raw~myvar2 }}-
            2.{{ myvar|raw|upper }}-
            3.{{ myvar|upper|lower|raw }}- {# raw: need to be the last one to not escaping values #}

            Route: {{ app.request.attributes.get('_route') }}
        </p>
    {% endif %}

{% endblock %}

{% block bon '' %}

{% block test %}
    {{ block('bon') }}
    {{ block('test', 'base.html.twig') }}
{% endblock %}